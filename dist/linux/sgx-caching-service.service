[Unit]
Description=SGX Caching Service

[Service]
Type=simple
User=scs
Group=scs
ExecStart=/usr/bin/sgx-caching-service run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-caching-service
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target
